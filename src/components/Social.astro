---
import { config } from "@/constants/config.ts";
import IconGithub from "@/components/icons/IconGithub.astro";
import IconLinkedin from "@/components/icons/IconLinkedin.astro";
---

<div class="social_container">
  <ul class="social_item_list">
    {
      config.socialMedia.map(({ name, url }: any) => {
        return (
          <li class="social_item">
            <a
              href={url}
              class="social_link"
              target="_blank"
              rel="nofollow noopener noreferrer"
              aria-label={name}
            >
              {name === "Github" && <IconGithub />}
              {name === "Linkedin" && <IconLinkedin />}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>

<script>
  const socialContainer: any = document.querySelector(".social_container")!;
  socialContainer.style.opacity = "0";
  setTimeout(() => (socialContainer.style.opacity = "1"), 2000);
</script>

<style>
  .social_container {
    width: 40px;
    position: fixed;
    bottom: 0;
    left: 40px;
    color: var(--color-light-slate);
  }
  .social_item_list {
    display: flex;
    flex-direction: column;
    align-items: center;
    &:after {
      content: "";
      display: block;
      width: 1px;
      height: 90px;
      margin: 0 auto;
      background-color: var(--color-light-slate);
    }
  }
  .social_item {
    &:last-of-type {
      margin-bottom: 20px;
    }
  }
  .social_link {
    padding: 10px;
    svg {
      width: 18px;
      height: 18px;
    }
  }
  @media screen and (max-width: 62.5em) {
    .social_container {
      left: 25px;
    }
  }
  @media screen and (max-width: 48em) {
    .social_container {
      display: none;
    }
  }
</style>
